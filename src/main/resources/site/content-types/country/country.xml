<content-type>
  <display-name>Country</display-name>
  <super-type>base:unstructured</super-type>
  <form>
    <input type="TextArea" name="description">
      <label>Description</label>
      <occurrences minimum="0" maximum="1"/>
    </input>
    <input type="TextLine" name="population">
      <label>Population</label>
      <occurrences minimum="0" maximum="1"/>
    </input>
    <!-- From Task - RadioButtons, part 1 --><!--
    <input name="name" type="RadioButton">
      <label>Radio Buttons</label>
      <occurrences minimum="0" maximum="0"/>
      <config>
        <option value="one">Option One</option>
        <option value="two">Option Two</option>
      </config>
    </input>-->
    <!-- From Task - RadioButtons, part 2 -->
    <input name="continent" type="RadioButton">
        <label>Continent</label>
        <occurrences minimum="0" maximum="0"/>
        <config>
            <option value="europe">Europe</option>
            <option value="america">America</option>
        </config>
    </input>
    <!-- From Task - HTML -->
    <input type="HtmlArea" name="html">
      <label>Some html</label>
      <occurrences minimum="0" maximum="1"/>
    </input>
  </form>
</content-type>
