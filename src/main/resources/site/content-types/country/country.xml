<content-type>
  <display-name>Country</display-name>
  <super-type>base:unstructured</super-type>
  <form>
    <input type="TextArea" name="description">
      <label>Description</label>
      <occurrences minimum="0" maximum="1"/>
    </input>
    <input type="TextLine" name="population">
      <label>Population</label>
      <occurrences minimum="0" maximum="1"/>
    </input>
    <!-- Try HTML and RadioButton -->
    <input type="HtmlArea" name="html">
      <label>Some html</label>
      <occurrences minimum="0" maximum="1"/>
    </input>
    <input type="RadioButton" name="eu">
      <label>Member of the EU</label>
      <occurrences minimum="1" maximum="1"/>
      <config>
        <option value="yes">Yes</option>
        <option value="no">No</option>
      </config>
    </input>
    <!-- Our mixin -->
    <!--
    <field-set name="mixin-test">
      <label>Menu item controls</label>
      <items>
        <inline mixin="menuitem"/> 
      </items>
    </field-set>
    -->
  </form>
</content-type>